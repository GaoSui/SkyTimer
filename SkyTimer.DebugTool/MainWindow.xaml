<Window x:Class="SkyTimer.DebugTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SkyTimer.DebugTool"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Image x:Name="img" Stretch="Fill" />
        <TextBox x:Name="output" Grid.Row="1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="btnOpen"
                    Click="btnOpen_Click"
                    Content="Open" />
            <Button x:Name="btnDecode"
                    Click="btnDecode_Click"
                    Content="Decode" />
            <Button x:Name="btnOut"
                    Click="btnOut_Click"
                    Content="Decode all" />
        </StackPanel>
    </Grid>
</Window>
