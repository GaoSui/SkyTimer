<UserControl x:Class="SkyTimer.View.StatisticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SkyTimer.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="600"
             DataContext="{Binding Statistic,
                                   Source={StaticResource Locator}}"
             mc:Ignorable="d">
    <UniformGrid Columns="3"
                 Rows="3"
                 TextBlock.FontSize="18">
        <Button Content="{Binding Best}" />
        <Button Content="{Binding Best5}" />
        <Button Content="{Binding Current5}" />
        <Button Content="{Binding Worst}" />
        <Button Content="{Binding Best12}" />
        <Button Content="{Binding Current12}" />
        <Button Content="{Binding All}" />
        <Button Content="{Binding Best100}" />
        <Button Content="{Binding Current100}" />
    </UniformGrid>
</UserControl>
